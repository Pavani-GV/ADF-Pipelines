{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "datafactorypav"
		},
		"linkservicedl_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'linkservicedl'"
		},
		"ls_onprime_source_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'ls_onprime_source'"
		},
		"linkgit_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://raw.githubusercontent.com"
		},
		"linkservicedl_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://storagedatafactorypav.dfs.core.windows.net/"
		},
		"ls_onprime_source_properties_typeProperties_host": {
			"type": "string",
			"defaultValue": "C:\\pavanifiles"
		},
		"ls_onprime_source_properties_typeProperties_userId": {
			"type": "string",
			"defaultValue": "MIS"
		},
		"managertrigger_properties_typeProperties_scope": {
			"type": "string",
			"defaultValue": "/subscriptions/9f275cba-4d7a-4c7e-af98-8dba8ee15d94/resourceGroups/azurefundamentals/providers/Microsoft.Storage/storageAccounts/storagedatafactorypav"
		},
		"trigger1_properties_typeProperties_scope": {
			"type": "string",
			"defaultValue": "/subscriptions/9f275cba-4d7a-4c7e-af98-8dba8ee15d94/resourceGroups/azurefundamentals/providers/Microsoft.Storage/storageAccounts/storagedatafactorypav"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "datafactorypav_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"linkservicedl_accountKey": {
						"value": "[parameters('linkservicedl_accountKey')]"
					},
					"ls_onprime_source_password": {
						"value": "[parameters('ls_onprime_source_password')]"
					},
					"linkgit_properties_typeProperties_url": {
						"value": "[parameters('linkgit_properties_typeProperties_url')]"
					},
					"linkservicedl_properties_typeProperties_url": {
						"value": "[parameters('linkservicedl_properties_typeProperties_url')]"
					},
					"managertrigger_properties_typeProperties_scope": {
						"value": "[parameters('managertrigger_properties_typeProperties_scope')]"
					},
					"ls_onprime_source_properties_typeProperties_host": {
						"value": "[parameters('ls_onprime_source_properties_typeProperties_host')]"
					},
					"ls_onprime_source_properties_typeProperties_userId": {
						"value": "[parameters('ls_onprime_source_properties_typeProperties_userId')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "datafactorypav_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"trigger1_properties_typeProperties_scope": {
						"value": "[parameters('trigger1_properties_typeProperties_scope')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'datafactorypav_ArmTemplate_0')]"
			]
		}
	]
}